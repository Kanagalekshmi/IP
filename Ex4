  <script>
    function validation(form) {
      var namePattern = /^\w+$/;
      var username = document.getElementById("username").value.trim();
      if (!namePattern.test(username)) {
          alert("Enter a valid username (only letters, digits, underscore)");
          return false;
      }

      var password = document.getElementById("password").value;
      var confirmPassword = document.getElementById("confirmPassword").value;
      if (password.length < 6) {
          alert("Password must be at least 6 characters long");
          return false;
      }
      if (password !== confirmPassword) {
          alert("Passwords do not match");
          return false;
      }

      var emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      var email = document.getElementById("email").value.trim();
      if (!emailPattern.test(email)) {
          alert("Enter a valid email address");
          return false;
      }

      var phonePattern = /^[0-9]{10}$/;
      var phone = document.getElementById("phone").value.trim();
      if (!phonePattern.test(phone)) {
          alert("Enter a valid 10-digit phone number");
          return false;
      }

      var ccPattern = /^[0-9]{16}$/;
      var ccNumber = document.getElementById("creditcard").value.trim();
      if (!ccPattern.test(ccNumber)) {
          alert("Enter a valid 16-digit credit card number");
          return false;
      }

      var submissionDate = document.getElementById("submissionDate").value;
      if (!submissionDate) {
          alert("Please select the date of submission");
          return false;
      }
      if (new Date(submissionDate) > new Date()) {
          alert("Date of submission cannot be in the future");
          return false;
      }

      var genderRadios = form.gender;
      var genderChecked = false;
      for (var i = 0; i < genderRadios.length; i++) {
        if (genderRadios[i].checked) {
          genderChecked = true;
          break;
        }
      }
      if (!genderChecked) {
          alert("Please choose your gender");
          return false;
      }

      if (form.dept.selectedIndex <= 0) {
          alert("Please choose your department");
          return false;
      }

      if (!document.getElementById("agree").checked) {
          alert("Please agree to the terms");
          return false;
      }

      alert("ðŸŽ‰ Registration Successful!\nSubmission Date: " + submissionDate);
      return true;
    }
  </script>
</head>
<body>

<h2>User Registration Form</h2>

<form name="form" onsubmit="return validation(this)">
    <label for="username">Username:</label>
